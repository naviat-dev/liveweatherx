<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <name>livewxx-settings</name>
    <layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>Liveweatherx settings</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

	<hrule />

	<group>
		<layout>hbox</layout>
		<text>
			<label>Status</label>
		</text>
		<text>
			<label>1234567890</label>
			<live>true</live>
			<property>/livewxx/status-text</property>
		</text>
	</group>

	<hrule />

	<checkbox>
		<label>Master switch</label>
		<property>/livewxx/enable</property>
		<live>true</live>
		<enable>
			<property>/livewxx/available</property>
		</enable>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

	<checkbox>
		<label>Use simulator date and time</label>
		<property>/livewxx/use-sim-time</property>
		<live>true</live>
		<enable>
			<property>/livewxx/available</property>
		</enable>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

	<text>
		<label>Disable Detailed Weather!</label>
		<color>
			<red>   1.0 </red>
			<green> 0.0 </green>
			<blue>  0.0 </blue>
		</color>
		<visible>
			<property>/nasal/local_weather/enabled</property>
		</visible>
	</text>

	<button>
		<legend>Close</legend>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>
</PropertyList>
